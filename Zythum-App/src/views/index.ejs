<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head.ejs') %> 

<body>
  
  <%- include('./partials/header.ejs') %> 

    <!-- CONTENEDOR SLIDER -->
<div class="slideshow-container">

  <!-- IMAGENES FULL WIDTH -->
  <div class="mySlides fade">
    <div class="numbertext">1 / 5</div>
    <img src="/img/SLIDE 1.png" style="width:100%">
    <div class="text"></div>
  </div>

  <div class="mySlides fade">
    <div class="numbertext">2 / 5</div>
    <img src="/img/SLIDE2.png" style="width:100%">
    <div class="text"></div>
  </div>

  <div class="mySlides fade">
    <div class="numbertext">3 / 5</div>
    <img src="/img/slide3.png" style="width:100%">
    <div class="text"></div>
  </div>
  
  <div class="mySlides fade">
    <div class="numbertext">4 / 5</div>
    <img src="/img/SLIDE4.png" style="width:100%">
    <div class="text"></div>
  </div>

  <div class="mySlides fade">
    <div class="numbertext">5 / 5</div>
    <img src="/img/SlideHome.png" style="width:100%">
    <div class="text"></div>
  </div>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>
<br>

<div class="detail">
  <article class="related">
      <p class="fwb fsl c2" id="categories">Categor√≠as</p>
      <div id="items">
          <div class="related-1 c1b">
            <a href="/products/category/1">
              <img src="/img/imagenes-produtos/Capa 1.png" alt="" style="max-width: 60px;">
              <p class="fwb fsm c2">Rubias</p>
            </a>
          </div>
          <div class="related-2 c1b">
            <a href="/products/category/2">
              <img src="/img/imagenes-produtos/vaso-cerveza-negra.png" alt="" style="max-width: 60px;">
              <p class="fwb fsm c2">Negras</p>
            </a>
          </div>
          <div class="related-3 c1b">
            <a href="/products/category/3">
              <img src="/img/imagenes-produtos/vaso-cerveza-roja.png" alt="" style="max-width: 60px;">
              <p class="fwb fsm c2">Rojas</p>
            </a>
          </div>
      </div>
  </article>
</div>

<!-- TARGETAS CON SCROLL HORIZONTAL -->
<main class= "Home">
  <p class="fwb fsl c2">Nuestros productos:</p>
  <div class="scrollmenu">
    
    <% products.forEach(product => { %>
      <div class="card">
          <a href="/products/detail/<%- product.id %>">
          <div class="imgBox">
              <img src= "/img/products/<%- product.image %> "style ="max-width: 25%" alt="cerveza">
          </div>
          </a>
          <div class="contentBox">
              <h3><%= product.brand.name %> <%= product.size.measure %>ml </h3>
              <h2 class="price">$<%= product.price %></h2>
              <a href="/products/cart" class="buy">comprar ahora</a>
          </div>          
      </div>  
  <% }) %>
  </div>
</main>

    
    <%- include('./partials/footer.ejs') %> 

    <%- include('./partials/scripts.ejs') %> 
</body>
</html> 