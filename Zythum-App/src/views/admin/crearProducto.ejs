<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agragar producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="/js/productForm.js" defer></script>
  </head>

<body>

  <%- include('../partials/headerAdmin')%> 

  <div class="container" style="width: 80%; margin: auto; background-color: pink; margin-top: 15px; padding: 20px;">

    <form action="/admin/create" method="POST" enctype="multipart/form-data" id="create-product">

      <div class="input-group mb-3 input-admin" >
        <label class="input-group-text" for="inputGroupSelect01">Marca</label>
        <select name="brand" class="form-select" id="brand">
          <% for (let i = 0; i < brands.length; i++) { %>
            <option value="<%= brands[i].id %>" <%= locals.old && old.brands == brands[i].id ? "selected" : "" %>><%= brands[i].name %></option>
          <% } %>
        </select>
      </div>
      <small class="text-danger" id="brandErrors"><%= (locals.errors && errors.brand) ? errores.brand.msg : "" %></small>
      

      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="category">Categoria</label>
        <select name="category" class="form-select" id="category">
          <% for (let i = 0; i < categories.length; i++) { %>
            <option value="<%= categories[i].id %>" <%= locals.old && old.categories == categories[i].id ? "selected" : "" %>><%= categories[i].name %> </option>
          <% } %>
        </select>
      </div>
      <small class="text-danger" id="categoryErrors"><%= (locals.errors && errors.category) ? errores.category.msg : "" %></small>
      
      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="subcategory">Tipo</label>
        <select name="subcategory" class="form-select" id="subcategory">
          <% for (let i = 0; i < subcategories.length; i++) { %>
            <option value="<%= subcategories[i].id %>" <%= locals.old && old.subcategories == subcategories[i].id ? "selected" : "" %>><%= subcategories[i].name %> </option>
          <% } %>
        </select>
      </div>
      <small class="text-danger" id="subcategoryErrors"><%= (locals.errors && errors.subcategory) ? errores.subcategory.msg : "" %></small>

      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="size">Tamaño (ml)</label>
        <select name="size" class="form-select" id="size">
          <% for (let i = 0; i < sizes.length; i++) { %>
            <option value="<%= sizes[i].id %>" <%= locals.old && old.sizes == sizes[i].id ? "selected" : "" %>><%= sizes[i].measure %> </option>
          <% } %>
        </select>
      </div>
      <small class="text-danger" id="sizeErrors"><%= (locals.errors && errors.size) ? errores.size.msg : "" %></small>

      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="taste">Sabor</label>
        <select name="taste" class="form-select" id="taste">
          <% for (let i = 0; i < tastes.length; i++) { %>
            <option value="<%= tastes[i].id %>" <%= locals.old && old.tastes == tastes[i].id ? "selected" : "" %>><%= tastes[i].name %> </option>
          <% } %>
        </select>
      </div>
      <small class="text-danger" id="tasteErrors"><%= (locals.errors && errors.taste) ? errores.taste.msg : "" %></small>

      <div class="input-group mb-3">
        <span class="input-group-text">Alcohol</span>
        <input name="alcohol" id="alcohol" type="number" value="<%= locals.old && old.alcohol %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <small class="text-danger" id="alcoholErrors"><%= (locals.errors && errors.alcohol) ? errores.alcohol.msg : "" %></small>

      <div class="input-group mb-3">
        <span class="input-group-text">Densidad</span>
        <input name="density" type="number" id="density" value="<%= locals.old && old.density %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <small class="text-danger" id="densityErrors"><%= (locals.errors && errors.density) ? errors.density.msg : "" %></small>
      
      <div class="input-group mb-3">
        <span class="input-group-text">Amargor</span>
        <input name="amargor" type="number" id="amargor" value="<%= locals.old && old.amargor %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <small class="text-danger" id="amargorErrors"><%= (locals.errors && errors.amargor) ? errors.amargor.msg : "" %></small>

      <div class="input-group mb-3">
        <span class="input-group-text">Stock</span>
        <input name="stock" type="number" id="stock" value="<%= locals.old && old.stock %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <small class="text-danger" id="stockErrors"><%= (locals.errors && errors.stock) ? errors.stock.msg : "" %> </small>

      <div class="input-group mb-3">
        <span class="input-group-text">Precio</span>
        <input name="price" type="number" id="price" value="<%= locals.old && old.price %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <small class="text-danger" id="priceErrors"><%= (locals.errors && errors.price) ? errors.price.msg : "" %> </small>

      <div class="input-group mb-3">
        <span class="input-group-text">Descuento</span>
        <input name="discount" type="number" id="discount" value="<%= locals.old && old.discount ? old.discount : 0 %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      </div>
      <small class="text-danger" id="discountErrors"><%= (locals.errors && errors.discount) ? errors.discount.msg : "" %> </small>
      
      <div class="mb-3">
        <label for="formFile" class="form-label">Seleccione la foto del producto</label>
        <input class="form-control" type="file" id="image" name="image">
      </div>
      <small class="text-danger" id="imageErrors"></small>

      <div class="form-floating">
        <textarea name="description" id="description" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
        style="height: 100px"><%= locals.old && old.description %></textarea>
        <label for="floatingTextarea2">Descripción</label>
        <small class="text-danger" id="descriptionErrors"><%= (locals.errors && errors.description) ? errors.description.msg : "" %> </small>
      </div>
      <br>
      <button type="submit" class="btn btn-success btn-sm">Crear Producto</button>
      <small class="text-danger" id="formErrors"></small>
    </form> <br>
    
    
    
  </div>
  



</body>

</html>