<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agragar producto</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>

  <%- include('../partials/headerAdmin')%> 

  <div class="container" style="width: 80%; margin: auto; background-color: pink; margin-top: 15px; padding: 20px;">

    <form action="/admin/create" method="POST" enctype="multipart/form-data">

      <div class="input-group mb-3 input-admin" >
        <label class="input-group-text" for="inputGroupSelect01">Marca</label>
        <select name="brand" class="form-select" id="inputGroupSelect01">
          <% for (let i = 0; i < brands.length; i++) { %>
            <option value="<%= brands[i].id %>" <%= locals.old && old.brands == brands[i].id ? "selected" : "" %>><%= brands[i].name %></option>
          <% } %>
        </select>
        <% if (locals.errors && errors.brand) { %>
          <small class="text-danger"><%= errors.brand.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="inputGroupSelect01">Categoria</label>
        <select name="category" class="form-select" id="inputGroupSelect01">
          <% for (let i = 0; i < categories.length; i++) { %>
            <option value="<%= categories[i].id %>" <%= locals.old && old.categories == categories[i].id ? "selected" : "" %>><%= categories[i].name %> </option>
          <% } %>
        </select>
        <% if (locals.errors && errors.category) { %>
          <small class="text-danger"><%= errors.category.msg %> </small>
        <% } %>
      </div>
      
      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="inputGroupSelect01">Tipo</label>
        <select name="subcategory" class="form-select" id="inputGroupSelect01">
          <% for (let i = 0; i < subcategories.length; i++) { %>
            <option value="<%= subcategories[i].id %>" <%= locals.old && old.subcategories == subcategories[i].id ? "selected" : "" %>><%= subcategories[i].name %> </option>
          <% } %>
        </select>
        <% if (locals.errors && errors.subcategory) { %>
          <small class="text-danger"><%= errors.subcategory.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="inputGroupSelect01">Tamaño (ml)</label>
        <select name="size" class="form-select" id="inputGroupSelect01">
          <% for (let i = 0; i < sizes.length; i++) { %>
            <option value="<%= sizes[i].id %>" <%= locals.old && old.sizes == sizes[i].id ? "selected" : "" %>><%= sizes[i].measure %> </option>
          <% } %>
        </select>
        <% if (locals.errors && errors.size) { %>
          <small class="text-danger"><%= errors.size.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3 input-admin">
        <label class="input-group-text" for="inputGroupSelect01">Sabor</label>
        <select name="taste" class="form-select" id="inputGroupSelect01">
          <% for (let i = 0; i < tastes.length; i++) { %>
            <option value="<%= tastes[i].id %>" <%= locals.old && old.tastes == tastes[i].id ? "selected" : "" %>><%= tastes[i].name %> </option>
          <% } %>
        </select>
        <% if (locals.errors && errors.taste) { %>
          <small class="text-danger"><%= errors.taste.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Alcohol</span>
        <input name="alcohol" type="number" value="<%= locals.old && old.alcohol %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <% if (locals.errors && errors.alcohol) { %>
          <small class="text-danger"><%= errors.alcohol.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Densidad</span>
        <input name="density" type="number" value="<%= locals.old && old.density %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <% if (locals.errors && errors.density) { %>
          <small class="text-danger"><%= errors.density.msg %> </small>
        <% } %>
      </div>
      
      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Amargor</span>
        <input name="amargor" type="number" value="<%= locals.old && old.amargor %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <% if (locals.errors && errors.amargor) { %>
          <small class="text-danger"><%= errors.amargor.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Stock</span>
        <input name="stock" type="number" value="<%= locals.old && old.stock %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <% if (locals.errors && errors.stock) { %>
          <small class="text-danger"><%= errors.stock.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Precio</span>
        <input name="price" type="number" value="<%= locals.old && old.price %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <% if (locals.errors && errors.price) { %>
          <small class="text-danger"><%= errors.price.msg %> </small>
        <% } %>
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Descuento</span>
        <input name="discount" type="number" value="<%= locals.old && old.discount ? old.discount : 0 %>" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        <% if (locals.errors && errors.discount) { %>
          <small class="text-danger"><%= errors.discount.msg %> </small>
        <% } %>
      </div>
      
      <div class="mb-3">
        <label for="formFile" class="form-label">Seleccione la foto del producto</label>
        <input class="form-control" type="file" id="formFile" name="image">
      </div>

      <div class="form-floating">
        <textarea name="description" id="description" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
        style="height: 100px"><%= locals.old && old.description %></textarea>
        <label for="floatingTextarea2">Descripción</label>
        <% if (locals.errors && errors.description) { %>
          <small class="text-danger"><%= errors.description.msg %> </small>
        <% } %>
      </div>
      <br>
      <button type="submit" class="btn btn-success btn-sm">Crear Producto</button>
    </form> <br>
    
    
    
  </div>
  



  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>