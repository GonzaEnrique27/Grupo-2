    <div class="cuadro-centrado-login">
        <div class="form-login">

            <div class="mitad-1">
                <h3 class="titulos-login">Iniciar sesión con</h3>

                <div class="login-redes">

                    <div class="iniciar-facebook-mobile">
                        <a href="https://facebook.com" target="blank"><img src="/img/icons/facebook-icon.svg" alt=""></a>
                    </div>
                    <div class="iniciar-google-mobile">
                        <a href="https://www.google.com" target="blank"><img src="/img/icons/google-icon.svg" alt=""></a>
                    </div>

                    <div class="iniciar-facebook">
                        <a href="#"><img src="/img/boton-facebook.png" alt="icono google"></a>
                    </div>
                    <div class="iniciar-google" alt="Continuar con google">
                        <a href="#"><img src="/img/boton-google.png" alt="icono google"></a>
                    </div>

                </div>

            </div>

            <div class="mitad-2">
                <div class="formulario-login-mitad2">
                    <form action="/users/login" method="POST" id="form-login">

                        <h3>Ingresa con tu email y contraseña</h3><br>

                        <div class="input-container" id="grupo__email">
                            <div class="formulario__grupo-input">
                            <input class="input-style" type="text" name="email" placeholder="Ingrese su email" value="">
                            <i class="formulario__validacion-estado fas fa-times-circle"></i><br>
                            <% if (locals.errors && errors.email) { %> 
                                <small class="error"><%= errors.email.msg %></small>
                            <% } %>
                        </div>
                        <p class="formulario__input-error">El correo solo puede contener letras, numeros, puntos, guiones y guion bajo.</p>
                    </div>
                        <div class="input-container" id="grupo__pass">
                            <div class="formulario_grupo-input">
                            <input class="input-style" type="text" name="pass" placeholder="Ingrese su contraseña" value="">
                            <i class="formulario__validacion-estado fas fa-times-circle"></i><br>
                            <% if (locals.errors && errors.pass) { %> 
                                <small class="error"><%= errors.pass.msg %></small>
                            <% } %>
                        </div>
                        <p class="formulario__input-error">La contraseña debe tener de 8 a 12 dígitos.</p>
                    </div>
                        <a class="recover-pass" href="">¿Olvidaste tu contraseña?</a>

                        <div class="input-checkbox">
                            <label for="recuerdame">
                                <input type="checkbox" name="remember" id="recuerdame"> Recuérdame
                            </label>
                        </div>
                        <% if (locals.errors && !errors.email && errors.custom) { %>
                            <small class="text-danger" style="color: red;"> <%= errors.custom.msg %>  </small>
                        <% } %>
                        <div class="buttom-login">
                            <button type="submit" class="buttom-login2">INICIAR SESIÓN</button>
                        </div>
                        <h3 class="crear-cuenta">¿Nuevo? <a href="/users/register">Creá tu cuenta</a></h3>

                    </form>
                </div>
            </div>
        </div>
    </div>

