<header>
    <div class="container">
        <div class="menu1">
            <nav id="h-menu-bar">
                <div id="h-menu" onclick="onClickMenu()">
                    <div id="h-bar1" class="bar"></div>
                    <div id="h-bar2" class="bar"></div>
                    <div id="h-bar3" class="bar"></div>
                </div>
                <ul class="nav" id="h-nav">
                    <li><a href="/" class="fss c1">Home</a></li>
                    <li><a href="/users/login" class="fss c1">Login</a></li>
                    <li><a href="/users/register" class="fss c1">Register</a></li>
                    <li><a href="/products/cart" class="fss c1" id="carrito">Carrito</a></li>
                    <li><a href="/products/detail/1" class="fss c1">Detalle</a></li>
                </ul>
            </nav>
            <div class="menu-bg" id="h-menu-bg" onclick="onClickMenu()"></div>
            <div class="menu-bg2" id="h-menu-bg2" onclick="onClickMenu()"></div>
            <a href="/" class="header-logo"><img src="/img/favi.jpg" alt=""></a>
            <form id="h-search-bar" action="/products/search" method="GET">
                <input type="search" name="keywords" id="input-search" placeholder="Buscar...">
                <button type="submit"><i class="fas fa-search"></i></button>
            </form>
            <div class="user">
                <a href="/products/cart" class="chart"><i class="fas fa-shopping-cart fsl"></i></a>
                <% if (typeof session.user != "undefined") { %>
                    <a href="/users/profile" class="user-icon user-icon2"><img class = "avatar-mini" src="/img/users/perfil-generica.jpg" alt=""></a>
                    <% if (session.user.rol === 1) { %>
                        <a href="/admin/"><i class="fas fa-user-cog"></i></a>
                    <% } %>

                    <a href="/users/logout" class="admin"><i class="fas fa-sign-out-alt"></i></a>
                <% } else{%>
                    <a href="/users/login" class="user-icon"><i class="fas fa-user fsl"></i></a>
                <% } %>
            </div>
        </div>
        <div class="menu2">
            <a href="https://www.google.com.ar/maps" class="ubicacion">
                <i class="fas fa-map-marker-alt fsl rosa"></i>
                <p class="fwr fsxs c1">Enviar a</p>
                <p class="fwb fss c1">Lanús Papá</p>
            </a>
            <nav>
                <ul class="nav">
                    <li><a href="/#categories" class="fss c1">Categorías</a></li>
                    <li><a href="/products" class="fss c1">Productos</a></li>
                    <li><a href="/products/cart" class="fss c1">Carrito</a></li>
                    <li><a href="/products/detail/1" class="fss c1">Detalle</a></li>
                </ul>
            </nav>
            <div class="empty"></div>
        </div>
    </div>
</header>
<script src="/js/searchValidator.js" defer></script>
<script src="/js/adminJS.js"></script>

