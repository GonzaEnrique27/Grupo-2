<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %> 

<body>

    <%- include('../partials/header.ejs') %> 


    <div class="caja-registro-escritorio">
        <div class="caja-form-registro">
            <center>
                <h2 class="h2-registro">Crear Cuenta</h2>
                <form action="/users/register" method="POST" enctype="multipart/form-data">
                    <input type="text" class="input-registro" name="name" id="nombre" placeholder="  Nombre" value="<%= locals.old && old.name %>"
                    ><br>
                    <% if (locals.errors && errors.name) { %> 
                        <span class="error"><%= errors.name.msg %></span>
                    <% } %>
                    <input type="text" class="input-registro" name="lastname" id="apellido" placeholder="  Apellido" value="<%= locals.old && old.lastname %>"
                    ><br>
                    <% if (locals.errors && errors.lastname) { %> 
                        <span class="error"><%= errors.lastname.msg %></span>
                    <% } %>
                    <input type="text" class="input-registro" name="email" id="email" placeholder=" Email" value="<%= locals.old && old.email %>"
                    ><br>
                    <% if (locals.errors && errors.email) { %> 
                        <span class="error"><%= errors.email.msg %></span>
                    <% } %>
                    <input type="text" class="input-registro" name="password" id="password"
                        placeholder=" Contraseña"><br>
                    <% if (locals.errors && errors.password) { %> 
                        <span class="error"><%= errors.password.msg %></span>
                    <% } %>
                    <input type="text" class="input-registro" name="password2" id="password2"
                        placeholder=" Confirmar contraseña"><br>
                    <% if (locals.errors && errors.password2) { %> 
                        <span class="error"><%= errors.password2.msg %></span>
                    <% } %>
                    <input type="file" id="formFile" name="image"><br><br>
    
                    <input type="checkbox" class="notificaciones" name="terms" id="notificaciones"><label for="notificaciones"> Acepto los términos y condiciones</label><br>
                    <% if (locals.errors && errors.terms) { %> 
                        <span class="error"><%= errors.terms.msg %></span>
                    <% } %>
                    <button type="submit" class="new-account">CREAR CUENTA</button><br>
                    <hr class="hr-registro">
                    <p>¿Ya tenes cuenta?<a href="/users/login"> Iniciar sesión</a> </p>
                </form>
            </center>
        </div>
    </div>


    <%- include('../partials/footer.ejs') %> 

    <%- include('../partials/scripts.ejs') %> 
    
</body>
</html>